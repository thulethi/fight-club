<form>
  <div class="form-group">
    <label for="fighterSelect1">Fighter 1 select</label>
    <select class="form-control" id="fighter1">
      <% @fighters.each do |fighter| %>
        <option><%= fighter.name %></option>
      <% end %>
    </select>
  </div>

  <div class="form-group">
    <label for="fighterSelect2">Fighter 2 select</label>
    <select class="form-control" id="fighter2">
      <% @fighters.each do |fighter| %>
        <option><%= fighter.name %></option>
      <% end %>
    </select>
  </div>

  <button onclick="fight_result()" type="submit" form="form1" value="Submit">Start</button>

  <% unless @fight_result.nil? %>
    <b><%= @fight_result %></b>
  <% end %>
</form>
